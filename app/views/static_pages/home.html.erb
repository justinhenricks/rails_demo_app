<% provide(:title, 'Home') %>
<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'shared/wallpost_form' %>
            </section>
        </aside>
        <div class="span8">
            <h3>Your Wall</h3>
            <%= render 'shared/wall' %>
        </div>
    </div>
<% else %>
    <div class="center hero-unit">
        <h1>Home Page</h1>
        <h2>Welome to my presentation on Ruby on Rails home page!</h2>
        <%= link_to "Sign Up!", signup_path, class:"btn btn-info btn-primary" %>
    </div>
<% end %>
